<h1>Listing professionals</h1>


<%= render partial: "geocomplete_vendor"%>


<ul class="list-group">
  <% @professionals.each do |item| %>
  <li class="list-group-item" onClick="route('/professionals/<%=item.id%>/edit')">
    <div class="form-group">
      <img src="/img/avatar<%=item.avatar%>.jpg"/>
    </div>
    <div class="form-group">
      <%= render partial: 'embed_map',locals:{address:CGI::escape(item.address)} %>
    </div>
    <h3><%=item.first_name+' '+item.last_name%></h3>
    <p>Address: <%=item.address%></p>
    <% if !item.phone.empty? %>
    <p>Phone: <%=item.phone%></p>
    <% end %>
    <p>Medical specialty: <%=item.specialty%></p>
  </li>
  <% end %>
</ul>


<%= link_to 'New Professional', {action:'new'},class:'btn btn-primary btn-lg' %>

<script>
    function route(path){
      window.location = path;
    }
</script>